{
  "private": true,
  "name": "design-system",
  "version": "1.0.14",
  "author": "The Iconic",
  "license": "",
  "description": "",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/theiconic/design-system.git"
  },
  "engines": {
    "npm": "10.13.0"
  },
  "scripts": {
    "commit": "git-cz",
    "clean:dist": "mkdir -p dist && rm -rf dist/*",
    "clean:deploy": "rm -rf static/* && mkdir -p static/",
    "test": "rm -rf coverage/* && jest --config jest.config.json --coverage",
    "lint": "lint-staged",
    "lint:scss": "npx stylelint src/**/*.scss --syntax scss",
    "lint:check": "eslint --print-config . | eslint-config-prettier-check",
    "fix": "run-p fix:*",
    "fix:js": "prettier-eslint --write '**/*.{js,jsx}'",
    "fix:scss": "prettier-stylelint --write 'src/**/*.{css,scss}'",
    "scss:build": "node-sass --source-map-root --include-path src src/theiconic.scss -o dist",
    "scss:prefix": "postcss dist/*.css --use autoprefixer -d dist",
    "scss:clean": "cleancss -o dist/theiconic.css dist/theiconic.css",
    "watch:scss": "node-sass --include-path src src/theiconic.scss -wo docs/pages/assets/css",
    "build:scss": "run-s scss:build scss:prefix scss:clean",
    "icons:fix": "npx svgo --enable=removeAttrs --folder=./src/assets/icons --config=svgo.config.json",
    "icons:build": "node scripts/build.icons.js",
    "build:icons": "run-s icons:fix icons:build",
    "build:sassdoc": "npx sassdoc src --dest dist/sassdocs",
    "build:docs": "cp dist/theiconic.css docs/pages/assets/css && cp dist/icons-sprite.symbol.svg docs/pages/assets/images && wintersmith build --config=docs/config.json",
    "server": "wintersmith preview --config=docs/config.json",
    "docs": "run-p build:docs build:sassdoc",
    "watch": "run-p start watch:scss",
    "start": "run-s build server",
    "build": "run-s clean:dist build:scss build:icons docs",
    "deploy": "run-s clean:deploy && cp dist/*.svg static/",
    "link": "mkdir -p ~/.theiconic/link && rm -f ~/.theiconic/link/design-system && ln -s ${PWD} ~/.theiconic/link/design-system",
    "release": "npx semantic-release",
    "postinstall": "npm run link"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/npm": "^5.2.0",
    "async": "^3.1.0",
    "autoprefixer": "^9.6.5",
    "clean-css-cli": "^4.3.0",
    "commitizen": "^4.0.3",
    "css-loader": "^2.1.1",
    "cz-conventional-changelog": "^3.0.2",
    "dotenv": "^8.2.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^4.0.0-beta.3",
    "jest": "^24.9.0",
    "jest-html-reporters": "^1.2.0",
    "js-yaml": "^3.13.1",
    "lint-staged": "^8.2.1",
    "markdown-it": "^8.4.2",
    "markdown-it-attrs": "^2.4.1",
    "markdown-it-html": "^1.0.0",
    "markdown-it-prism": "^2.0.3",
    "mini-css-extract-plugin": "^0.6.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.18.2",
    "prettier-eslint-cli": "^4.7.1",
    "prettier-stylelint": "^0.4.2",
    "pug": "^2.0.4",
    "sass-true": "^4.0.0",
    "sassdoc": "^2.7.1",
    "semantic-release": "^15.13.24",
    "stylelint": "^9.6.0",
    "stylelint-config-prettier": "^5.3.0",
    "stylelint-prettier": "^1.1.1",
    "svg-sprite": "^1.5.0",
    "svgo": "^1.3.0",
    "wintersmith": "^2.5.0",
    "wintersmith-livereload": "^1.0.1"
  }
}
