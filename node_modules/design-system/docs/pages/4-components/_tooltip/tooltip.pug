each type in locals.sources['tooltip-position']
    div(class = `columns with-tooltip tooltip-container tooltip-container--${type.name}`)
        div(class = `${type.class || ''}`)
            button.button Shop Now
        div(class= `tooltip tooltip--arrow tooltip--position-${type.name}`)
            h5.inline-title Tooltip
            p.paragraph #{type.description}
            code tooltip--position-#{type.name}
