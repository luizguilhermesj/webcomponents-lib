- var trim = str => str.trim();
- var type = btn => btn.type ? `button--${btn.type}` : '';
- var state = btn => btn.type && btn.state ? `${type(btn)}--${btn.state}` : btn.state ? `button--${btn.state}` : '';

each buttons in locals.sources.buttons
    each theme in ['light', 'dark']
        div(class= `${theme}-theme-box`)
            h3.title  #{buttons.title} (#{theme})
            each btn in buttons.styles
                - var classes = trim(`button ${type(btn)} ${state(btn)}`)
                button(class=`${classes}`) Button
                each name in classes.split(' ').filter(Boolean)
                    p
                        code #{name}
