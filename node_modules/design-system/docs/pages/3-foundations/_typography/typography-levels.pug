- console.log(locals.sources['typography-levels']);
each font_group in locals.sources['typography-levels']
    h2= `Font Family: ${font_group.title}`
    ul
      each level, index in font_group.levels
        li.typography-block
          .columns
              div
                each font_style in level.fontStyles
                  - var key= index + 1
                  p(class=`level-${key} ${font_style}`)= `Level ${key}`
              div
                each font_style in level.fontStyles
                  - var key= index + 1
                  p(class=`level-${key} ${font_style}`)= 'Sample text'
              div
                code.badge= 'font-size: '
                  b #{level.fontSize}
                code.badge= 'line-height: '
                  b #{level.lineHeight}
                code.badge= 'letter-spacing: '
                  b #{level.letterSpacing}
