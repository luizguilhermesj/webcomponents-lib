each inputs in locals.sources['forms-input-icon']
    h2 #{inputs.title}
    each input in inputs.types
        div.form__group
            label(class="form__label" for=`input-${input.attr}`) #{input.attr} + #{input.icon} icon -
                code form__input__icon--#{input.icon}
            div.form__action
                input(id=`input-${input.attr}`, name= `input-${input.attr}` type=input.attr class=`form__input`)
                - if(input.wrap)
                    div.form__input__icon
                        span(class=`form__input__icon--${input.icon}`)
                - else
                    span(class=`form__input__icon form__input__icon--${input.icon}`)
