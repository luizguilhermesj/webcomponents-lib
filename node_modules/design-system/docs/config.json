{
  "port": 3000,
  "locals": {
    "url": "http://localhost:3000",
    "name": "The Iconic Styleguide",
    "owner": "The Iconic",
    "description": "Kitchen sink-like styleguide + component board"
  },
  "require": {
    "fs": "fs"
  },
  "plugins": [
    "./docs/pages/assets/plugins/markdown/markdown-it.js",
    "./docs/pages/assets/plugins/toc.js",
    "wintersmith-livereload"
  ],
  "contents": "./docs/pages",
  "templates": "./docs/templates",
  "output": "./dist/docs",
  "baseUrl": "/",

  "TOC": {
    "1-introduction": {
      "title": "Introduction",
      "pages": [
        "get-started",
        "the-iconic-brand",
        "design-principles",
        "design-vision",
        "scss-patterns",
        "naming-conventions"
      ]
    },
    "2-design-guidelines": {
      "title": "Design Guidelines",
      "pages": ["colours", "imagery", "illustrations", "animations", "content"]
    },
    "3-foundations": {
      "title": "Foundations",
      "pages": [
        "grid",
        "icons",
        "colours",
        "typography",
        "text-types",
        "links",
        "lists",
        "buttons",
        "forms-label",
        "forms-input",
        "forms-checkbox",
        "forms-radio",
        "forms-dropdown"
      ]
    },
    "4-components": {
      "title": "Components",
      "pages": ["components", "message-card", "tooltip"]
    },
    "5-tutorials": {
      "title": "How Tos",
      "pages": ["how-to-migrate-patterns", "how-to-local-setup", "how-to-icons"]
    }
  }
}
