doctype html

block vars
  - var bodyclass = null;
  - var baseHost = process.env.HOST || '/'

html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      base(href=baseHost)
      title
        block title
          = locals.name
      link(rel='stylesheet', href='assets/css/prism.css')
      link(rel='stylesheet', href='assets/css/theiconic.css')
      | !{ livereloadScript }

  body(class=bodyclass)
    .visually-hidden
      include ../pages/assets/images/icons-sprite.symbol.svg

    main.container
      nav.left-nav
        include nav.pug

      block content

    footer
      block footer

    //- script(src='assets/js/prism.js')
    script(src='assets/js/events.js')
