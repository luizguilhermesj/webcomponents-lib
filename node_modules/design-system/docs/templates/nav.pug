- var isSection = /([0-9]+)-([\w-]*)/
- var isArticle = article => article.title && article.metadata

each articles, section in contents
  - if (isSection.test(section))
    ul
      li.section
        span= section.match(isSection)[2] || section
        ul
          each article in articles
            - if (isArticle(article))
                - var classes= (page.title == article.title) ? 'subsection active' : 'subsection';
                - var url= article.url && article.url.substring(1)
                li(class=classes)
                  a(href=url) #{article.title}
